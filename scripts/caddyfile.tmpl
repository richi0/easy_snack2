www.$host$ {
    redir https://$host${uri}
}

$host$ {
    reverse_proxy 127.0.0.1:3000

    handle /api/* {
        reverse_proxy 127.0.0.1:7000
    }

    handle_path /static/* {
        encode gzip
        header Cache-Control max-age=5184000
        file_server {
            root $root$/BE/staticfiles
        }
    }

    handle_path /media/* {
        encode gzip
        header Cache-Control max-age=5184000
        file_server {
            root $root$/BE/mediafiles
        }
    }
}